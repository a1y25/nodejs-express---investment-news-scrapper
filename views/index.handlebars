<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
<style>
	.ipo{
		color: red;
		font-weight: bold;
	}
</style>

<div class="container">
	{{#each news}}
		<h1><a href="{{this.link}}">{{this.source}}</a></h1>
		<ul>
			{{#each this.items}}
     			<li><a href="{{this.link}}" target="_blank">{{{this.title}}}</a>  {{#if this.date}} - <span class="label label-info">{{this.date}}</span> {{/if}}</li>
     			<hr>
    		{{/each}}
		</ul>
   		<hr>
    {{/each}}
</div>